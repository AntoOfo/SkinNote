<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/dateCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2025-05-17 09:34"
            android:textStyle="bold"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/faceCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Face Wash: CeraVe Foaming Cleanser" />

        <TextView
            android:id="@+id/cleanserCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cleanser: Glow Hub Gel" />

        <TextView
            android:id="@+id/serumCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serum: The Ordinary Niacinamide" />

        <TextView
            android:id="@+id/moisCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moisturizer: Simple Gel Moisturiser" />

        <TextView
            android:id="@+id/skinfeelCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skin Feel: 7/10" />

    </LinearLayout>

</androidx.cardview.widget.CardView>